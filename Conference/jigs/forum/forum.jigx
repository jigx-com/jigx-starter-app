datasources:
  forum: 
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/forum
  
      query: |
        SELECT 
          id, 
          '$.displayName', 
          '$.email',
          '$.avatar',
          '$.question',
          '$.like',
          '$.thumbs',
          '$.laugh' 
        FROM [default/forum] 
        ORDER BY '$.displayName'
      
  reactions:
    type: datasource.static
    options:
