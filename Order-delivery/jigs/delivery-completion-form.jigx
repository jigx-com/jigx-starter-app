title: Complete delivery
type: jig.default

actions:
  - children:
      - type: action.execute-entity
        options:
          title: Complete delivery
          provider: DATA_PROVIDER_DYNAMIC
          entity: default/deliveries
          method: update
          goBack: previous
          data:
            id: =@ctx.components.id.state.value
            category: =@ctx.components.category.state.value
            photo: =@ctx.components.photo.state.base64
            signature: =@ctx.components.signature.state.base64
            
children:
    - type: component.layout
      options:
        hasBackground: false
        padding: minimal
        children:
          - type: component.layout
            options:
              padding: minimal
              gap: small
              children:
                - type: component.text 
                  options:
                    align: center
                    text: ="Tracking id:" & " " 
                    isSubtle: true
                    fontSize: small
                - type: component.text 
                  options:
                    align: center
                    text: =@ctx.datasources.all-deliveries[deliveryId = @ctx.jig.inputs.deliveryId].dTrackingId
                    isHeaderRegular: true
           
    - type: component.layout
      options:
        gap: small
        hasBackground: true
        backgroundColor:
          - when: true
            color: color14
        children:
          - type: component.layout
            options:
              isRow: true
              flexChildren: 0
              gap: large
              padding: large
              children:
                - type: component.icon
                  options:
                    icon: pencil-2
                - type: component.text
                  options:
                    text: Please add following details to complete the delivery

    - type: component.form
      instanceId: complete-delivery-form
      options:
        isDiscardChangesAlertEnabled: false
        children:
          - type: component.text-field
            instanceId: id
            options:
              isHidden: true
              label: id
              initialValue: =@ctx.jig.inputs.deliveryId
          - type: component.text-field
            instanceId: category
            options:
              label: Category
              isHidden: true
              initialValue: Completed
          - type: component.media-field
            instanceId: photo
            options:
              label: Photo
              mediaType: image
          - type: component.signature-field
            instanceId: signature
            options:
              label: Signature